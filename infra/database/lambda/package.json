{
  "name": "db-init-lambda",
  "version": "1.0.0",
  "description": "Database initialization Lambda for Jocular Kangaroo",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "package": "npm run build && cp -r ../schema dist/",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@aws-sdk/client-rds-data": "^3.0.0",
    "drizzle-orm": "^0.44.5"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.4",
    "typescript": "^5.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "*.ts",
      "!*.test.ts"
    ]
  }
}
